{% extends "@App/base.html.twig" %}

{% block title %}Exchange Rate Info{% endblock %}

{% block body %}
    <div class="row marketing">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Code</th>
                    <th>Rate</th>
                    <th>Provider</th>
                    <th>Last Update</th>
                </tr>
                </thead>
                <tbody>
                {% for exchage in exchanges %}
                    <tr>
                        <td>{{ exchage.id }}</td>
                        <td>{{ exchage.code }} ({{ exchage.code|currency_symbol }})</td>
                        <td>{{ exchage.rate }}</td>
                        <td>{{ exchage.provider|title_case }}</td>
                        <td>{{ exchage.updatedAt|date('Y-m-d h:i:s') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
